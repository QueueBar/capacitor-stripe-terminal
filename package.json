{
  "name": "capacitor-stripe-terminal",
  "version": "0.0.1",
  "description": "Capacitor plugin for Stripe Terminal (credit card readers).",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "pre-commit": "pretty-quick --staged",
    "docs": "typedoc --excludeExternals --out out src/index.ts"
  },
  "author": "eventOne Labs <opensource@event1.io>",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^3.2.3",
    "@stripe/terminal-js": "^0.9.0",
    "rxjs": "^6.6.7"
  },
  "devDependencies": {
    "@capacitor/android": "^3.2.3",
    "@capacitor/ios": "^3.2.3",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "prettier-plugin-java": "^1.4.0",
    "pretty-quick": "^3.1.1",
    "semantic-release": "^19.0.2",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "CapacitorStripeTerminal.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "stripe",
    "stripe-terminal"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eventOneHQ/capacitor-stripe-terminal"
  },
  "bugs": {
    "url": "https://github.com/eventOneHQ/capacitor-stripe-terminal/issues"
  },
  "release": {
    "branches": [
      {
        "name": "next"
      },
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": true
      }
    ]
  }
}
